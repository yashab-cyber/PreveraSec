{
  "name": "preversec",
  "version": "1.0.0",
  "description": "AppSpec++ Full Grey-Box Context Compiler - Production-ready self-aware DAST scanner",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "preversec": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "coverage:schema": "node scripts/schema-coverage.js",
    "benchmark": "node scripts/benchmark.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "validate": "npm run lint && npm run test",
    "prepare": "npm run build",
    "docs:generate": "typedoc src --out docs/api",
    "docker:build": "docker build -t preversec .",
    "docker:run": "docker run --rm -it preversec"
  },
  "keywords": [
    "security",
    "dast",
    "api-security",
    "vulnerability-scanner",
    "appspec",
    "openapi",
    "graphql",
    "postman",
    "security-testing",
    "penetration-testing"
  ],
  "author": "PreveraSec Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yashab-cyber/PreveraSec.git"
  },
  "bugs": {
    "url": "https://github.com/yashab-cyber/PreveraSec/issues"
  },
  "homepage": "https://github.com/yashab-cyber/PreveraSec#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@graphql-tools/schema": "^10.0.0",
    "@types/har-format": "^1.2.15",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0",
    "fast-glob": "^3.3.2",
    "graphql": "^16.8.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "openai": "^4.20.1",
    "ora": "^5.4.1",
    "source-map": "^0.7.4",
    "table": "^6.8.1",
    "typescript": "^5.3.0",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.8",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.9.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4"
  },
  "files": [
    "dist/**/*",
    "schemas/**/*",
    "templates/**/*",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
